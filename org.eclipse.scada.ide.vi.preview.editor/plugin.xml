<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.scada.ide.vi.preview.editor.PreviewEditorImpl"
            default="false"
            extensions="vi"
            icon="icons/preview-editor.png"
            id="org.eclipse.scada.ide.vi.preview.editor"
            name="Visual Interface Preview">
         <contentTypeBinding
               contentTypeId="org.eclipse.scada.hmi.vi">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.eclipse.scada.ide.vi.preview">
            <command
                  commandId="org.eclipse.scada.ide.vi.preview.editor.reload"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.eclipse.scada.ide.vi.preview.editor.OpenPreview"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
  
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.eclipse.scada.ide.vi.preview.editor.reload">
         <class
               class="org.eclipse.scada.ide.vi.preview.editor.ReloadHandler"></class>
         <activeWhen>
            <and>
               <with
                     variable="activeEditorId">
                  <equals
                        value="org.eclipse.scada.ide.vi.preview.editor">
                  </equals>
               </with>
            </and>
         </activeWhen>
      </handler>
      <handler
            commandId="org.eclipse.scada.ide.vi.preview.editor.OpenPreview">
         <class
               class="org.eclipse.scada.ide.vi.preview.editor.PreviewHandler"></class>
         <activeWhen>
            <with
                  variable="activeMenuSelection">
               <iterate>
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                     <test
                           property="org.eclipse.core.resources.contentTypeId"
                           value="org.eclipse.scada.hmi.vi">
                     </test>
                  </adapt>
               </iterate>
            </with>
         </activeWhen>

      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.scada.configuration"
            id="org.eclipse.scada.ide.vi.preview.editor.reload"
            name="Reload">
      </command>
      <command
            categoryId="org.eclipse.scada.configuration"
            id="org.eclipse.scada.ide.vi.preview.editor.OpenPreview"
            name="Preview">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.eclipse.scada.ide.vi.preview.editor.reload"
            icon="icons/refresh.png">
      </image>
      <image
            commandId="org.eclipse.scada.ide.vi.preview.editor.OpenPreview"
            icon="icons/preview-editor.png">
      </image>
   </extension>

</plugin>
